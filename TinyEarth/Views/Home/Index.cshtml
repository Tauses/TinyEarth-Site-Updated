@{
    ViewData["BodyClass"] = "home-page";
    ViewData["Title"] = "Home";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="icon" href="@Url.Content("/images/favicon.ico")" type="image/x-icon">

    <title>@ViewData["Title"] - TinyEarth</title>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Zen+Kaku+Gothic+Antique:wght@400;500;700&display=swap" rel="stylesheet">

    <!-- CSS FILES -->
    <link rel="stylesheet" href="~/css/Home/site.css" />
    <link rel="stylesheet" href="~/css/Discord/discord.css" />
    <link rel="stylesheet" href="~/css/Stats/playerCounter.css" />
    <link rel="stylesheet" href="~/css/Home/home.css" />

    <!-- JS FILES -->
    <script defer src="~/js/pingScript.js"></script>

</head>

<body onload="pageLoad()" class="home-page">


    <div class="grid-container">

        <div class="playerCounter">
            <div class="copy-ip">CLICK TO COPY IP ADDRESS</div>
            <div class="ip-address">tiny-earth.com</div>
            <div id="mc-status"></div>
        </div>

        <!-- DISCORD WIDGET SECTION -->
        <section class="discord-info">
            <div class="discord">
                <div class="discord-widget">
                    <a href="https://discord.gg/AadcBKckG4" target="_blank">
                        <img src="~/images/main_logo.png" height="64px" width="64px" alt="DISCORD INVITE">
                        <img src="~/images/discordlogo.png" height="64px" width="64px">
                    </a>
                </div>
            </div>
        </section>

        <!-- MAIN LOGO SECTION -->
        <section class="main-logo">
            <img src="~/images/main_logo.png" height="64px" width="64px" alt="mainlogo" />
        </section>

        <!-- MAIN CONTENT SECTION -->
        <section class="main-content">
            <div class="main-details">
                <p>MAIN CONTENT</p>
            </div>

        </section>

        <!-- PLAY NOW + IP SECTION -->
        <section class="playnow-info-home">
            <div class="playnow-details">
                <button>PLAY NOW</button>

            </div>

        </section>

        <!-- LEADERBOARDS SECTION -->
        <section class="leaderboard-info">

            <div class="leaderboard-details">
                LEADERBOARDS
            </div>

        </section>



    </div>

</body>
</html>