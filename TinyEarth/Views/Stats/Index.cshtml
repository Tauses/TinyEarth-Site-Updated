@{
    ViewData["BodyClass"] = "stats-page";
    ViewData["Title"] = "Search Player"; 
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="icon" href="@Url.Content("/images/favicon.ico")" type="image/x-icon">

    <script src="~/js/random_background.js"></script>

    <title>@ViewData["Title"] - TinyEarth</title>

    <!-- CSS FILES -->
    <link rel="stylesheet" href="~/css/Stats/stats.css" />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Zen+Kaku+Gothic+Antique:wght@400;500;700&display=swap" rel="stylesheet">
</head>

<body onload="pageLoad()" class="stats-">


    <main class="home_main" id="home_main">
        
        
        <!-- SEARCH FUNCTION -->
        <h1>Search for a Player</h1>

        <form asp-action="SearchPlayer" method="post">
            <input type="text" name="playerName" placeholder="Enter player name" required />
            <button type="submit">Search</button>
        </form>

        @if (ViewBag.ErrorMessage != null)
        {
            <p>@ViewBag.ErrorMessage</p>
        }


            <!-- IP + Play Now Section -->
            <section class="server-info">
                <div class="server-icon">

                    <!-- logo/icon -->
                    <img src="~/images/main_logo.png" alt="Server Icon" />
                </div>

                <div class="server-details">
                    <div class="server-ip">
                        <span>PLAY.YOURSITE.COM</span>
                        <span class="player-count">1,085</span>
                    </div>
                    <div class="play-now">
                        <button>Play Now</button>
                    </div>
                    <div class="discord-widget">
                        <a href="https://discord.gg/YOURINVITE" class="discord-button">
                            Join Our Discord
                        </a>
                    </div>
                </div>
            </section>

        <!-- View Statistics Title -->
        <section class="statistics-header">
            <h2>View Statistics</h2>
        </section>


        <!-- Search Player & Leaderboards Section -->
        <section class="search-leaderboards">
            <div class="search-player">
                <h3>Search Player</h3>
                <div class="search-content">
                    <img src="~/images/player-icon.png" alt="Player Icon" />
                    <div class="search-input-group">
                        <input type="text" placeholder="Enter username" />
                        <button>Search</button>
                    </div>
                    <p>We have detailed gameplay statistics on every player on our network. Please enter a username.</p>
                </div>
            </div>

            <div class="view-leaderboards">
                <h3>View Leaderboards</h3>
                <div class="leaderboards-content">
                    <img src="~/images/leaderboard-icon.png" alt="Leaderboard Icon" />
                    <div class="leaderboard-description">
                        <p>Visit our leaderboards and compare your skills with other players on our network.</p>
                        <button>Visit Leaderboards</button>
                    </div>
                </div>
            </div>
        </section>


        <!-- Stats Grid -->
        <section class="stats-grid">
            <div class="stat-card">
                <i class="icon-users"></i>
                <div class="stat-number">51,937</div>
                <div class="stat-label">Monthly Active Users</div>
                <p>We manage a dedicated playerbase, competitive to the core.</p>
            </div>
            <div class="stat-card">
                <i class="icon-trophy"></i>
                <div class="stat-number">120</div>
                <div class="stat-label">Leaderboards</div>
                <p>Compete in almost every aspect of the gameplay experience.</p>
            </div>
            <div class="stat-card">
                <i class="icon-gamepad"></i>
                <div class="stat-number">2,589,214</div>
                <div class="stat-label">Games Played</div>
                <p>A rocking number of minigames played to date.</p>
            </div>
            <div class="stat-card">
                <i class="icon-clock"></i>
                <div class="stat-number">843,546</div>
                <div class="stat-label">Hours Played</div>
                <p>Players like to spend time with us, we take good care of them!</p>
            </div>
        </section>
        </main>
</body>
</html>